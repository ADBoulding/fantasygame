            <kind>1</kind>
            <string>///Actual Dialogue stuff

if (global.player1State == "talking") and (isTalking == true) and (topic = "") and (greeted = false) 
{
    if global.progress[? workingName+"Progress"] = -1
    {
        var greetText = dialogue[? "intro"];
        global.progress[? workingName+"Progress"] = 0;
    } else {
        var greetText = dialogue[? "greet"];
    }
    obj_console.console += greetText;
    greeted = true;
} else if topic != "" and (greeted = true) and (keyboard_check_pressed(vk_enter) or (bypass != 0)){
    bypass = 0;
    var topicLength = dialogue[? topic+"Num"];
    if topicProgress != -1 
    {
        if topicProgress &gt; topicLength
        {
            topic = "";
            topicProgress = -1;
            greeted = false;
        }
        if dialogue[? topic+string(topicProgress)] = "invisible"
        {
            dialogue[? topic+"Visible"] = false;
            ds_list_delete(subjects, ds_list_find_index(subjects, topic));
            topic = "";
            topicProgress = -1;
        } else {
            if dialogue[? topic+string(topicProgress)] != undefined
            {
                obj_console.console += dialogue[? topic+string(topicProgress)];
            }
            if dialogue[? topic+string(topicProgress)+"Progress"] != undefined
            {
                obj_controller.waitForResponse = true;
                obj_controller.responseArg = dialogue[? topic+string(topicProgress)+"Progress"];      
                obj_controller.targetArg = "obj_npc0";      
            } else {
                topicProgress += 1;
            }
        } 
    }
}
