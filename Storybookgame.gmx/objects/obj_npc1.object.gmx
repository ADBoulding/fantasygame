        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Actual Dialogue stuff

if (global.player1State == "talking") and (isTalking == true) and (topic = "") and (greeted = false)    ///Checks to see if you are in conversation
{
    if global.progress[? workingName+"Progress"] = -1                                                   ///Checks to see if you have talked with the npc before
    {
        var greetText = dialogue[? "intro"];                                                            ///if no, uses the intro
        global.progress[? workingName+"Progress"] = 0;
    } else {
        var greetText = dialogue[? "greet"];                                                            ///if so, uses "greet"
    }
    obj_console.console += greetText;
    greeted = true;
} else if topic != "" and (greeted = true) and (keyboard_check_pressed(vk_enter) or (bypass != 0)){     ///so it doesnt loop, checks if you pressed enter, or there is a bypass
    bypass = 0;
    var topicLength = dialogue[? topic+"Num"];                          ///gets length of the topic list
    if topicProgress != -1 
    {
        if topicProgress &gt; topicLength                                  ///if you've exhausted the dialogue it takes you back to the main bit
        {
            topic = "";
            topicProgress = -1;
            greeted = false;
            obj_console.console += "What else would you like to talk about?#";
        }
        if dialogue[? topic+string(topicProgress)] = "/b"               ///if line is a break "/b" then break
        {
            topic = "";
            topicProgress = -1;
            obj_console.console += "anything else?";
        } else if dialogue[? topic+string(topicProgress)] = "/l"        ///if line is a leave "/l" then leave
        {
            show_message("fired");
            topic = "";
            topicProgress = -1;
            global.player1State = "normal";
            isTalking = false;
            greeted = false;
            exit;
        } else {
            if (argNum != -1) and (dialogue[? topic+string(topicProgress)] != undefined)        ///if there are arguments present
            {
                if dialogue[? topic+string(topicProgress)+"_"+string(argNum)] != undefined      ///if it exists, print it
                {
                    obj_console.console += dialogue[? topic+string(topicProgress)+"_"+string(argNum)];
                } else {                                                                        ///if not, reset
                    obj_console.console += dialogue[? topic+string(topicProgress)]
                    argNum = -1;
                }
            } else if dialogue[? topic+string(topicProgress)] != undefined {
                obj_console.console += dialogue[? topic+string(topicProgress)];
            }
            if dialogue[? topic+string(topicProgress)+"arg"] != undefined
            {
                obj_controller.waitForResponse = true;
                obj_controller.responseArg = dialogue[? topic+string(topicProgress)+"arg"];      
                obj_controller.targetArg = "obj_npc1";      
            } else {
                topicProgress += 1;
            }
        } 
    }
}
</string>
