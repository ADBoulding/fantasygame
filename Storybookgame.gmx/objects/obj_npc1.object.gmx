            <string>///Handles the NPC creation

isTalking = false;
topic = "";
topicProgress = -1;
greeted = false;
objects = ds_list_create();
talkList = ds_list_create();
responseList = ds_list_create();
bypass = 0;
argNum = -1;


ds_list_add(responseList, "yes", "no", "leave");
ds_list_add(talkList, "ask","talk about","leave","goodbye","clear","give");

workingName = global.localeNPC[| 1];
iniName = string_replace_all(workingName, " ", "_");    
ini_open(working_directory + "\assets\NPCs\location\" + string_lower(global.location) + "\" + iniName + ".ini");

dialogue = ds_map_create();
race = obj_player.race;

if !ini_section_exists(race)
{
    race = "default";
}


if ini_key_exists(race, "nameDisc")
{
    dialogue[? "nameDisc"] = ini_read_string(race, "nameDisc", workingName);
}

if ini_key_exists(race, "intro")
{
    dialogue[? "intro"] = ini_read_string(race, "intro", "");
}
if ini_key_exists(race, "greet")
{
    dialogue[? "greet"] = ini_read_string(race, "greet", "");
}

if ini_key_exists(race, "subject")
{
    subject = ini_read_string(race, "subject", "");
    subjects = ds_list_create();
    if (subject != "")
    {
        var arr;
        var del = ",";
        var str = subject + del;
        var len = string_length(del);
        var ind = 0;
        repeat (string_count(del, str)) {
            var pos = string_pos(del, str) - 1;
            arr = string_copy(str, 1, pos);
            str = string_delete(str, 1, pos + len);
            ds_list_add(subjects, arr);
            arr = 0;
        }
    }
    for (i = 0; i &lt; ds_list_size(subjects); i++)
    {
        var sub = subjects[| i];
        if ini_key_exists(race, sub+"Visible")
        {
            dialogue[? sub+"Visible"] = ini_read_string(race, sub+"Visible", "");
        }
        if ini_key_exists(race, sub+"Num")
        {
            for (n = 0; n &lt; ini_read_real(race, sub+"Num", -1); n++;)
            {
                dialogue[? sub+string(n)] = ini_read_string(race, sub+string(n), "");
                if ini_key_exists(race, sub+string(n)+"arg")
                {
                    dialogue[? (sub+string(n)+"arg")] = ini_read_string(race, sub+string(n)+"arg", "");
                }
                if ini_key_exists(race, sub+string(n)+"_0")
                {
                    var exists = true
                    var exNum = 0;
                    while (exists = true)
                    {
                        if ini_key_exists(race, sub+string(n)+"_"+string(exNum))
                        {
                            dialogue[? (sub+string(n)+"_"+string(exNum))] = ini_read_string(race, sub+string(n)+"_"+string(exNum), "");
                            exNum++;
                        } else {
                            exists = false;
                        }
                    }
                }
            }  
        }
    }
}

ini_close();
</string>
          </argument>
